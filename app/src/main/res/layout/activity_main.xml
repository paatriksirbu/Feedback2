<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@color/beige_suave">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestor de Novelas"
        android:textSize="24sp"
        android:textColor="#0D1F2D"
        android:textStyle="bold"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/buttonAddNovel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Agregar Novela"
        android:textColor="@android:color/white"
        android:layout_marginTop="80dp"
        android:background="@color/azul_marino"/>

    <Button
        android:id="@+id/buttonDeleteNovel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Eliminar Novela"
        android:textColor="@android:color/white"
        android:background="@color/azul_marino"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonReviews"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/esmeralda"
            android:text="ReseÃ±as"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonWatchNovels"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/esmeralda"
            android:text="Ver Novelas"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewNovels"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="100dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>