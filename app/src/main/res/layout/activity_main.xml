<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/beige_suave">

    <!-- Título: Gestor de Novelas -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestor de Novelas"
        android:textSize="24sp"
        android:textColor="#0D1F2D"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Botón: Agregar Novela -->
    <Button
        android:id="@+id/buttonAddNovel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Agregar Novela"
        android:textColor="@android:color/white"
        android:background="@color/azul_marino"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Botón: Eliminar Novela -->
    <Button
        android:id="@+id/buttonDeleteNovel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Eliminar Novela"
        android:textColor="@android:color/white"
        android:background="@color/azul_marino"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddNovel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Botones en fila (Reseñas, Ver Novelas) -->
    <Button
        android:id="@+id/buttonReviews"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Reseñas"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/esmeralda"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteNovel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/buttonWatchNovels" />

    <Button
        android:id="@+id/buttonWatchNovels"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Ver Novelas"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/esmeralda"
        app:layout_constraintTop_toTopOf="@id/buttonReviews"
        app:layout_constraintStart_toEndOf="@id/buttonReviews"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- Lista de novelas -->
    <ListView
        android:id="@+id/listViewNovels"
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="100dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonWatchNovels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
